{
  "functions": {
    "api/index.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/auth/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js",
      "has": [
        {
          "type": "query",
          "key": "shop"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js",
      "has": [
        {
          "type": "query",
          "key": "hmac"
        }
      ]
    }
  ]
}
